{
    "id": "com.p1.fork",
    "version": "2.0.3",
    "compatibility": ">=2.0.0",
    "brandColor": "#3399cc",
    "homeyCommunityTopicId": 6150,
    "sdk": 2,
    "name": {
        "nl": "P1 Slimme meter",
        "en": "P1 Smartmeter"
    },
    "description": {
        "nl": "P1 Slimme meter",
        "en": "P1 Smartmeter"
    },
    "images": {
        "small": "/assets/images/small.png",
        "large": "/assets/images/large.png"
    },
    "author": {
        "name": "Leendert de Kok",
        "email": "koktaildotcom@hotmail.com"
    },
    "contributing": {
        "donate": {
            "paypal": {
                "username": "koktaildotcom"
            }
        }
    },
    "contributors": {
        "developers": [
            {
                "name": "Lucas van der Have",
                "email": "lucasvdhave@gmail.com"
            }
        ]
    },
    "category": [
        "energy"
    ],
    "permissions": [],
    "drivers": [
        {
            "id": "p1-smartmeter",
            "name": {
                "nl": "P1 slimme meter",
                "en": "P1 smartmeter"
            },
            "images": {
                "small": "./drivers/p1-smartmeter/assets/small.png",
                "large": "./drivers/p1-smartmeter/assets/large.png"
            },
            "class": "sensor",
            "capabilities": [
                "measure_power.consumed",
                "meter_power.consumed",
                "measure_power.generated",
                "meter_power.generated",
                "meter_gas.measure",
                "meter_gas.consumed"
            ],
            "capabilitiesOptions": {
                "measure_power.consumed": {
                    "title": {
                        "nl": "Elektriciteit huidig verbruik",
                        "en": "Electricity current usage"
                    }
                },
                "measure_power.generated": {
                    "isGenerator": true,
                    "title": {
                        "nl": "Elektriciteit huidig teruglevering",
                        "en": "Electricity current delivery"
                    }
                },
                "meter_power.consumed": {
                    "title": {
                        "nl": "Elektriciteit verbruik",
                        "en": "Electricity delivery"
                    }
                },
                "meter_power.generated": {
                    "isGenerator": true,
                    "title": {
                        "nl": "Elektriciteit teruglevering",
                        "en": "Electricity delivery"
                    }
                },
                "meter_gas.measure": {
                    "title": {
                        "nl": "Gas huidig verbruik",
                        "en": "Gas current usage"
                    },
                    "decimals": 5
                },
                "meter_gas.consumed": {
                    "title": {
                        "nl": "Gas verbruik",
                        "en": "Gas usage"
                    }
                }
            },
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_p1"
                    }
                },
                {
                    "id": "add_p1",
                    "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id": "measure_power.consumed.changed",
                "title": {
                    "en": "Current power changed",
                    "nl": "Huidige stroomverbruik gewijzigd"
                },
                "args": [
                    {
                        "name": "p1-smartmeter",
                        "type": "device",
                        "filter": "driver_id=p1-smartmeter"
                    }
                ],
                "tokens": [
                    {
                        "name": "measure_power.consumed",
                        "type": "number",
                        "title": {
                            "en": "Current power",
                            "nl": "Huidige stroomverbruik"
                        },
                        "example": 50
                    }
                ]
            },
            {
                "id": "meter_power.consumed.changed",
                "title": {
                    "en": "Consumed power changed",
                    "nl": "Verbuikte stroom gewijzigd"
                },
                "args": [
                    {
                        "name": "p1-smartmeter",
                        "type": "device",
                        "filter": "driver_id=p1-smartmeter"
                    }
                ],
                "tokens": [
                    {
                        "name": "meter_power.consumed",
                        "type": "number",
                        "title": {
                            "en": "Consumed power",
                            "nl": "Verbuikte stroom"
                        },
                        "example": 100
                    }
                ]
            }
        ]
    }
}
  

